@model IEnumerable<Employee>
@{
	ViewData["Title"] = "View Added Employee";
}
<partial name="_Notification" />
@if (Model.Count() > 0)
{
	<table width="100%" style="background-color: bisque">
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Email</th>
			<th>Phone</th>
			<th>Age</th>
			<th>Salary</th>
			<th>Is Currently Hired</th>
			<th>Hire Date</th>
			<th>Created At</th>
			<th>Last Update</th>
		</tr>
		@{
			bool rowBgColorSwitch = true;
		}
	@foreach(Employee employee in Model)
	{
			<tr style="background: @(rowBgColorSwitch ? "white" : "lightgray")">
				<td>@employee.Id</td>
				<td>@employee.Name</td>
				<td>@employee.Email</td>
				<td>@employee.Phone</td>
				<td>@employee.Age</td>
				<td>@employee.Salary.ToString("C2")</td>
				<td>@employee.IsCurrentlyHired</td>
				<td>@employee.HireDate</td>
				<td>@employee.CreatedAt</td>
				<td>@(employee.LastUpdatedAt == null ? "N/A" : employee.LastUpdatedAt)</td>
			</tr>
			rowBgColorSwitch = !rowBgColorSwitch;
		}
	</table>
} else
{
	<a asp-controller="Employees" asp-action="Create">Add an employee</a>
}